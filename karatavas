import random

"""Nejauši izvēlēsies vienu no vārdiem."""
words = ["migla", "saule", "debesis"]
print("Sveicināti spēlē karātavas")
def izvēlēties_vārdu():
word_list= ["migla", "saule"]
word = random.choice(word_list).lower()

guessed_correctly = []
guessed_icorrectly = []
tries = 6
hangman count = - 1
while tries > 0:
        output = ''
        for letter in word:
            if letter in guessed_correctly
                output += letter
             else:
        output += '_ '
    if output == word
        break
    print("Uzmini vārdu:")
    print(tries, " iespējas palikušas")
    guess = input().lower()
     if guess in guessed correctly or guess in guesses_incorecctly:
        print("Šo burtu jau minēji", guess)
    elif guess in word:
        print("Uzminēji pareizo burtu")
    else:
        print("Nepareizais burts")
        hangman_count = hangman_count +1
        tries = tries -1
        guessed_incorrectly.append(guess)
        print(hangman_count)
    if tries > 0:
        print("Uzminēji vārdu! Uzvarēji!")
    else:
        print("Diemžēl uzminēji nepareizo burtu. Mēģini vēlreiz")

        
    

      